</head>
<body>
<!-- Header -->
<header>
    <div class="header-1">
        <div class="container">
            <div class="row">
                <div class="header-1-1 col-6 p-0">
                    <ul>
                        <li class="m-0"><i class="fa-regular fa-circle-question"></i><a class="ml-1" href="">Trợ giúp</a></li>
                        <li ><i class="fa-regular fa-newspaper"></i><a href="">Tin tức</a></li>
                        <li ><i class="fa-solid fa-clipboard-list"></i><a href="">Khuyến mãi</a></li>
                    </ul>
                </div>

                <div class="header-1-2 col-lg-6 p-0">
                    <ul>
                        <li><i class="fa-solid fa-gift"></i><a href="#">Ưu đãi & tiện ích</a></li>
                        <li><i class="fa-solid fa-check-to-slot"></i><a href="#">Kiểm tra đơn hàng</a></li>
                        <li><i class="fa-solid fa-right-to-bracket"></i><a href="#">Đăng nhập</a></li>
                        <li><i class="fa-solid fa-user-plus"></i><a href="#">Đăng ký</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    </div>
    <div class="header-2">
        <div class="container">
            <div class="row">
                <!-- Logo -->
                <div class="col-2 p-0">
                    <a href="index.html"><img class="logo" src="img/logo-new.png" alt="logo"></a>
                </div>
                <!-- End logo -->
                <!-- Search -->
                <div class="col-5">
                    <nav class="navbar navbar-light bg-light">
                        <div class="container-fluid">
                            <form class="d-flex">
                                <input class="form-control me-2 margin-5px" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-success button-search" type="submit">Search</button>
                            </form>
                        </div>
                    </nav>
                </div>
                <!-- End search -->
                <!-- hot line -->
                <div class="col-3 ml-3">
                        <span class="row">
                            <i class="fa-solid fa-phone col-2"></i>
                           <div class="col-9">
                            <p class="phone">0933 109 009</p>
                            <p class="hot-line">Hot line</p>
                           </div>
                        </span>

                </div>
                <!-- End hot line -->
                <!-- Order -->
                <div class="col-2 order p-0">
                    <p ><a href="#"><i class="fa-solid fa-cart-shopping"></i></a></p>
                </div>
                <!-- End order -->
            </div>
        </div>
    </div>
    <!-- End header 2 -->
    <!-- Header 3 -->
    <div class="header-3">
        <div class="container">
            <div class="row">
                <div class="col-3 header-3-1">
                    <p><a  class="font-size-15px" href="#"><b>Danh mục sản phẩm</b></a></p>
                </div>
                <div class="col-8">
                    <div class="row">
                        <div class="col-5 p-0">
                            <p><a href="#">Giảm thêm 2%</a></p>
                        </div>
                        <div class="col-7">
                            <p><a href="#">Chương Trình Khuyến Mãi</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End header 3 -->


</header>
<!-- End header -->
<!-- Nav -->

<!-- End nav -->
<!-- Section -->
<section>
    <!-- nav bar -->
    <div class="container">
        <div class="row banner">
            <div class="nav-bar col-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="#">Sách - Truyện Tranh</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Dụng Cụ Vẽ - VPP</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Bảng Vẽ - Phụ Kiện Số</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Vật Dụng - Đời Sống</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Làm Đẹp - Sức Khỏe</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Quà Tặng - Đồ Chơi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Thời Trang</a>
                    </li>
                </ul>
            </div>
            <!-- End nav bar  -->
            <!-- Slide  -->
            <div class="slider col-9">
                <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active" data-bs-interval="1800">
                            <a href="#"><img src="img/slide-1.jpg" class="d-block w-100" alt="slide 1"></a>
                        </div>
                        <div class="carousel-item" data-bs-interval="1800">
                            <a href="#"><img src="img/slide-2.jpg" class="d-block w-100" alt="slide 2"></a>
                        </div>
                        <div class="carousel-item" data-bs-interval="1800">
                            <a href="#"><img src="img/slide-3.jpg" class="d-block w-100" alt="slide 3"></a>
                        </div>
                        <div class="carousel-item" data-bs-interval="1800">
                            <a href="#"><img src="img/slide-4.jpg" class="d-block w-100" alt="slide 4"></a>
                        </div>
                        <div class="carousel-item" data-bs-interval="1800">
                            <a href="#"><img src="img/slide-5.jpg" class="d-block w-100" alt="slide 5"></a>
                        </div>
                        <div class="carousel-item" data-bs-interval="1800">
                            <a href="#"><img src="img/slide-6.jpg" class="d-block w-100" alt="slide 6"></a>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <!-- End slide -->
        </div>

        <!-- Image product selling -->
        <div class="row product-hot">
            <div class="col-4 padding-left-0">
                <img src="img/product-hot1.jpg" alt="image hot product 1">
            </div>
            <div class="col-4">
                <img src="img/product-hot2.jpg" alt="image hot product 2">
            </div>
            <div class="col-4 padding-right-0">
                <img src="img/product-hot3.jpg" alt="image hot product 3">
            </div>
        </div>
        <!-- Book -->
        <div class="row mt-3">
            <c:forEach items="${listBook}" var="book"> Item
                <div class="col-3 book">
                    <div class="card">
                        <img class="card-img-top" src=" <c:out value="${book.image}"></c:out>"> alt="Book 1">
                        <div class="card-body">
                            <h4 class="card-title"><c:out value="${book.name}"/></h4>
                            <p class="card-text"><c:out value="${book.author}"/></p>
                            <p class="card-text"><c:out value="${book.price}"/></p>
                            <button class="btn btn-primary col-3">Buy</button>
                        </div>
                    </div>
                </div>
            </c:forEach>


        </div>
        <!-- End book -->
    </div>
</section>
<!-- End section -->
</body>


